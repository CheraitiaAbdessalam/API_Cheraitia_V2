<Window x:Class="API_Cheraitia_V2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Météo"
        Height="450"
        Width="800">

    <!-- ===== Ressources ===== -->
    <Window.Resources>
        <LinearGradientBrush x:Key="WeatherBackgroundBrush"
                             StartPoint="0,0"
                             EndPoint="0,1">
            <GradientStop Color="#FF4FC3F7" Offset="0"/>
            <GradientStop Color="#FF0288D1" Offset="0.5"/>
            <GradientStop Color="#FF01579B" Offset="1"/>
        </LinearGradientBrush>
    </Window.Resources>

    <!-- ===== Layout principal ===== -->
    <Grid Background="{StaticResource WeatherBackgroundBrush}">
        <StackPanel Margin="20">

            <TextBlock Text="Météo Actuelle"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="0,0,0,20"/>

            <TextBlock x:Name="CityNameText"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Foreground="White"/>

            <TextBlock x:Name="CurrentDateText"
                       FontSize="16"
                       Foreground="White"
                       Margin="0,5"/>

            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock x:Name="CurrentTempText"
                           FontSize="48"
                           Foreground="White"
                           Margin="0,0,10,0"/>
                <Image x:Name="CurrentWeatherIcon"
                       Width="64"
                       Height="64"/>
            </StackPanel>

            <TextBlock x:Name="CurrentConditionText"
                       FontSize="18"
                       Foreground="White"/>

            <TextBlock x:Name="CurrentHumidityText"
                       FontSize="16"
                       Foreground="White"/>

            <TextBlock x:Name="CurrentWindText"
                       FontSize="16"
                       Foreground="White"/>

            <TextBlock Text="Prévisions Météo"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="0,30,0,10"/>

            <ItemsControl x:Name="ForecastItemsControl">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <!-- Carte météo -->
                        <Border Background="#40FFFFFF"
                                CornerRadius="16"
                                Margin="5"
                                Padding="10">
                            <StackPanel>
                                <TextBlock Text="{Binding date}"
                                           FontWeight="Bold"
                                           Foreground="White"/>

                                <TextBlock Foreground="White">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} °C - {1} °C">
                                            <Binding Path="tmp_min"/>
                                            <Binding Path="tmp_max"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>

                                <TextBlock Text="{Binding condition}"
                                           Foreground="White"/>

                                <Image Source="{Binding icon_big}"
                                       Width="48"
                                       Height="48"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </StackPanel>
    </Grid>
</Window>
