<Window x:Class="API_Cheraitia_V2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Météo"
        Height="450"
        Width="800">

    <Window.Resources>
        <LinearGradientBrush x:Key="WeatherBackgroundBrush"
                             StartPoint="0,0"
                             EndPoint="0,1">
            <GradientStop Color="#FF4FC3F7" Offset="0"/>
            <GradientStop Color="#FF0288D1" Offset="0.5"/>
            <GradientStop Color="#FF01579B" Offset="1"/>
        </LinearGradientBrush>
    </Window.Resources>

    <Grid Background="{StaticResource WeatherBackgroundBrush}">
        <!-- Grille principale : 2 colonnes -->
        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- ===== Colonne gauche : météo actuelle + recherche ===== -->
            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                <TextBlock Text="Météo Actuelle"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,0,20"/>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBox x:Name="CityTextBox"
                             Width="150"
                             Height="32"
                             FontSize="14"
                             Margin="0,0,0,0"/>
                    <Button Content="Recherche"
                            Width="80"
                            Height="32"
                            Click="SearchButton_Click"/>
                </StackPanel>

                <TextBlock x:Name="CityNameText"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="White"/>

                <TextBlock x:Name="CurrentDateText"
                           FontSize="16"
                           Foreground="White"
                           Margin="0,5"/>

                <StackPanel Orientation="Horizontal" Margin="0,10">
                    <TextBlock x:Name="CurrentTempText"
                               FontSize="48"
                               Foreground="White"
                               Margin="0,0,10,0"/>
                    <Image x:Name="CurrentWeatherIcon"
                           Width="64"
                           Height="64"/>
                </StackPanel>

                <TextBlock x:Name="CurrentConditionText"
                           FontSize="18"
                           Foreground="White"/>

                <TextBlock x:Name="CurrentHumidityText"
                           FontSize="16"
                           Foreground="White"/>

                <TextBlock x:Name="CurrentWindText"
                           FontSize="16"
                           Foreground="White"/>
            </StackPanel>

            <!-- ===== Colonne droite : prévisions météo ===== -->
            <StackPanel Grid.Column="1">
                <TextBlock Text="                 Prévisions Météo"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,0,10"/>

                <ItemsControl x:Name="ForecastItemsControl"
                              Margin="0,100,0,0">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <!-- Les petites cartes s'étalent horizontalement -->
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#40FFFFFF"
                CornerRadius="16"
                Margin="2"
                Padding="10">
                                <StackPanel>
                                    <!-- Date -->
                                    <TextBlock Text="{Binding date}"
                           FontWeight="Bold"
                           Foreground="White"/>

                                    <!-- Températures du jour (min / max) juste sous la date -->
                                    <TextBlock Foreground="White">
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="{}{0} °C / {1} °C">
                                                <Binding Path="tmp_min"/>
                                                <Binding Path="tmp_max"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>

                                    <!-- Condition (texte) -->
                                    <TextBlock Text="{Binding condition}"
                           Foreground="White"/>

                                    <!-- Icône -->
                                    <Image Source="{Binding icon_big}"
                       Width="48"
                       Height="48"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
