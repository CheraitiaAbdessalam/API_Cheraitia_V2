<UserControl x:Class="API_Cheraitia_V2.Views.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:API_Cheraitia_V2.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
            <ComboBox x:Name="CityComboBox"
               Width="150"
               Height="32"
               FontSize="14"
               Margin="0,0,0,0"
               IsEditable="True"
               IsTextSearchEnabled="True"
               SelectionChanged="CityComboBox_SelectionChanged"/>
            <Button Content="Recherche"
             Width="80"
             Height="32"
             Click="SearchButton_Click"/>
        </StackPanel>

    </Grid>
</UserControl>
